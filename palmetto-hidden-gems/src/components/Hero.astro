---
const { title, subtitle, ctaText } = Astro.props;
---

<style>
  .hero {
    position: relative;
    width: 100vw;
    height: calc(100vh - var(--navbar-height));
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-overlay {
    background: url("/images/street4.jpg") center/cover no-repeat;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-color: rgba(0, 0, 0, 0.4); /* Optional overlay color */
  }

  .hero-content {
    position: relative;
    z-index: 2; /* Ensures content is above overlay */
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: #ffffff;
    padding: 2rem;

    p {
      font-size: 1.5rem;
    }
  }

  h1 {
    font-size: 4rem;
  }

  .cta-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #ff6b6b;
    color: #ffffff;
    font-size: 1.2rem;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    border-radius: 8px;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    margin-top: 1rem;
  }

  .cta-button:hover {
    transform: translateY(-4px);
    box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.3);
    background-color: #ff4757;
  }

  .cta-button:active {
    transform: translateY(1px);
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
  }

  .cta-button:focus {
    outline: 2px solid #ffffff;
    outline-offset: 4px;
  }
</style>

<section class="hero">
  <div class="hero-overlay unselectable"></div>
  <div class="hero-content unselectable">
    <h1 class="unselectable">{title}</h1>
    <p class="unselectable">{subtitle}</p>
    <a href="/tours" class="cta-button unselectable">{ctaText}</a>
  </div>
</section>
