---
import Wave from "../components/shapes/Wave.astro";
import CTA from "../components/CTA.astro";
import Layout from "../layouts/Layout.astro";
import FlexContainer from "../components/layout/FlexContainer.astro";
import Section from "../components/layout/Section.astro";
import WaveHeroSection from "../components/layout/WaveHeroSection.astro";
import Features from "../components/Features.astro";
import Portfolio from "../components/Portfolio.astro";
import Pricing from "../components/Pricing.astro";
import Heading from "../components/atoms/Heading.astro";
import Paragraph from "../components/atoms/Paragraph.astro";
import { Image } from "astro:assets";
---

<head slot="head">
  <link
    rel="preload"
    as="image"
    href="/assets/mockups/palmetto-hidden-mobile-trio.avif"
    
  />
  <meta
    name="description"
    content="Park Circle Web Design, Charleston, SC | Small Business Web Designer
    Whether you need a simple website, a robust web application, or custom
    APIs, break free from cookie-cutter templates. Our fully hand-coded
    solutions start at just $199/mo and come with comprehensive SEO
    services to boost your online presence."
  />
</head>

<Layout>
  <WaveHeroSection>
    <!-- Main container -->
    <FlexContainer
      class="w-full px-6 max-w-[1200px] text-center mt-8 md:pt-10 lg:text-left lg:-mt-36 lg:mx-auto"
    >
      <div class="mb-8 md:mb-0 md:mr-10">
        <Heading level={2} variant="hero" class="text-l md:text-xl">
          Bespoke Web Solutions, Expertly Hand-Coded
        </Heading>
        <Heading level={1} variant="hero" class="mt-3">
          Custom Web Development
        </Heading>
        <Paragraph variant="hero" class="mt-3 mb-8 px-12 md:px-0">
          Whether you need a simple website, a robust web application, or custom
          APIs, break free from cookie-cutter templates. Our fully hand-coded
          solutions start at just $199/mo and come with comprehensive SEO
          services to boost your online presence.
        </Paragraph>
        <CTA href="/contact" variant="light" clazz="text-xl"> Get Started </CTA>
      </div>

      <!-- Hero Image -->
      <Image
        src="/assets/mockups/palmetto-hidden-mobile-trio.avif"
        class="h-auto max-w-[90%] sm:max-w-[20rem] lg:max-w-[32rem] 2xl:max-w-[40rem] md:ml-10 z-10 mt-12 md:mt-0"
        alt="Portfilio image | Park Circle Web Design, Charleston SC"
        width={512}
        height={389}
        loading="eager"
        fetchpriority="high"
        sizes="(max-width: 640px) 90vw, (max-width: 1024px) 50vw, 512px"
      />
    </FlexContainer>
  </WaveHeroSection>

  <Section variant="light" class="mt-20 mb-40 min-h-[100vh]">
    <FlexContainer
      col
      class="w-full max-w-[1100px] px-6 mb-32 text-center lg:text-left lg:mx-auto"
    >
      <Heading variant="accent" level={2} class="mt-10">
        Never Stress Over Your Digital Presence Again
      </Heading>
      <Paragraph class="text-lg max-w-3xl text-center mt-3">
        At Park Circle Web Design, we craft custom websites, dynamic web
        applications, ecommerce solutions, and robust APIs tailored for small
        businesses across North America. Every line of code is meticulously
        hand-coded to ensure peak performance and optimal search engine
        visibility, driving more traffic and revenue to your business. Plus, we
        handle ongoing maintenance and updates, so youâ€™re always ahead of the
        curve. Our mission is to build lasting partnerships, empowering your
        business to thrive in an ever-evolving digital landscape.
      </Paragraph>
    </FlexContainer>
    <FlexContainer class="max-w-[1200px] h-full mx-auto">
      <Features />
    </FlexContainer>
  </Section>

  <Section variant="light" class="mb-32">
    <Portfolio />
  </Section>

  <Pricing />
</Layout>
